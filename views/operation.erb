<html>
  <%case params[:operation]
    when "add"
      res = params[:number1].to_i + params[:number2].to_i
    when "subtract"
      res = params[:number1].to_i - params[:number2].to_i
    when "multiply"
      res = params[:number1].to_i * params[:number2].to_i
    when "divide"
      res = params[:number1].to_i / params[:number2].to_f
  end%>
  <h1><%=res%></h1>
</html>
